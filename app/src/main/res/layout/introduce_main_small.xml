<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/introduce_base_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e24c4d"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="1456"
            app:scale_base_width="1080" >

            <android.support.v4.view.ViewPager
                android:id="@+id/introduce_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:scale_height="1376"
                app:scale_left="0"
                app:scale_top="80"
                app:scale_width="1080"
                app:swipeable="false" >
            </android.support.v4.view.ViewPager>
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="30"
            app:scale_base_width="1080" >

            <ImageView
                android:id="@+id/introduce_indicator_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_ball_on"
                app:scale_height="30"
                app:scale_left="456"
                app:scale_top="0"
                app:scale_width="31" />
"

            <ImageView
                android:id="@+id/introduce_indicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_ball"
                app:scale_height="30"
                app:scale_left="526"
                app:scale_top="0"
                app:scale_width="31" />

            <ImageView
                android:id="@+id/introduce_indicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intro_ball"
                app:scale_height="30"
                app:scale_left="596"
                app:scale_top="0"
                app:scale_width="31" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="192"
            app:scale_base_width="1080" >

            <ImageView
                android:id="@+id/introduce_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/selector_intro_button"
                app:scale_height="110"
                app:scale_left="94"
                app:scale_top="82"
                app:scale_width="422" />

            <TextView
                android:id="@+id/introduce_login_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_e24c4d"
                app:scale_height="110"
                app:scale_left="94"
                app:scale_textsize="40"
                app:scale_top="82"
                app:scale_width="422" />

            <ImageView
                android:id="@+id/introduce_sign_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/selector_intro_button"
                app:scale_height="110"
                app:scale_left="562"
                app:scale_top="82"
                app:scale_width="422" />

            <TextView
                android:id="@+id/introduce_sign_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_e24c4d"
                app:scale_height="110"
                app:scale_left="562"
                app:scale_textsize="40"
                app:scale_top="82"
                app:scale_width="422" />
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>