<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/step_littlefox_introduce_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/title_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_d8232a"
        app:scale_base_height="100"
        app:scale_base_width="1920" >

        <TextView
            android:id="@+id/step_littlefox_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_white"
            app:scale_height="100"
            app:scale_left="40"
            app:scale_textsize="30"
            app:scale_top="0"
            app:scale_width="800" />

        <ImageView
            android:id="@+id/step_littlefox_introduce_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player_btn_close"
            app:scale_height="36"
            app:scale_left="1840"
            app:scale_top="30"
            app:scale_width="36" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
    
    <WebView
        android:id="@+id/step_littlefox_introduce_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_base_layout" />

         <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/step_littlefox_introduce_progress_wheel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:scale_base_height="150"
            app:scale_base_width="1920" >

            <com.littlefox.library.view.dialog.ProgressWheel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:matProg_barColor="@color/color_ed433e"
                app:matProg_progressIndeterminate="true"
                app:scale_height="150"
                app:scale_left="885"
                app:scale_top="0"
                app:scale_width="150" />
        </com.ssomai.android.scalablelayout.ScalableLayout>   

</RelativeLayout>