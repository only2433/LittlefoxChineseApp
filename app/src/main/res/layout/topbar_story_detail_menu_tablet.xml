<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="100"
        app:scale_base_width="1920" >

        <ImageView
            android:id="@+id/top_menu_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/birdandkip_tex_tablet"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1920" />
        
        <ImageView 
           	android:id="@+id/top_menu_back_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="100"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="114"/>        

        <ImageView
            android:id="@+id/top_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_pre"
            app:scale_height="35"
            app:scale_left="40"
            app:scale_top="34"
            app:scale_width="34" />

        <ImageView
            android:id="@+id/top_menu_info_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_info"
            app:scale_height="36"
            app:scale_left="1904"
            app:scale_top="32"
            app:scale_width="18" />

        <ImageView
            android:id="@+id/top_menu_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="50"
            app:scale_left="1887"
            app:scale_top="24"
            app:scale_width="50" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>