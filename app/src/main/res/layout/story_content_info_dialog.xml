<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >
    
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/progress_wheel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:scale_base_height="1110"
        app:scale_base_width="1000" >

        <com.littlefox.library.view.dialog.ProgressWheel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:matProg_barColor="@color/color_ed433e"
            app:matProg_progressIndeterminate="true"
            app:scale_height="150"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="150" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/info_item_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:scale_base_height="730"
        app:scale_base_width="1000" 
        android:visibility="gone">
        
        

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_d8232a"
            app:scale_height="10"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1000" />

        <com.littlefox.library.view.text.SeparateTextView
            android:id="@+id/info_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            app:scale_height="146"
            app:scale_left="56"
            app:scale_textsize="56"
            app:scale_top="10"
            app:scale_width="944" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_d48686"
            app:scale_height="4"
            app:scale_left="26"
            app:scale_top="156"
            app:scale_width="948" />

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="570"
            app:scale_base_width="1000"
            app:scale_height="570"
            app:scale_left="0"
            app:scale_top="160"
            app:scale_width="1000" >

            <TextView
                android:id="@+id/info_series_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_c99292"
                app:scale_height="40"
                app:scale_left="56"
                app:scale_textsize="35"
                app:scale_top="30"
                app:scale_width="944" />

            <TextView
                android:id="@+id/info_series_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4dip"
                android:text=""
                android:textColor="@color/color_5e626d"
                app:scale_height="414"
                app:scale_left="56"
                app:scale_textsize="44"
                app:scale_top="95"
                app:scale_width="888" />
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/info_item_people_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff9e6"
        app:scale_base_height="380"
        app:scale_base_width="1000"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_e9bb9b"
            app:scale_height="2"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="1000" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            app:scale_width="1000"
            app:scale_height="378"
            app:scale_left="0"
            app:scale_top="2">

            <LinearLayout
                android:id="@+id/add_info_people_laytout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
