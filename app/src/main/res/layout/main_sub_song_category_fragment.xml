<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:id="@+id/song_category_base_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="760"
                app:scale_base_width="1080" >

                <TextView
                    android:id="@+id/song_category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_d8232a"
                    app:scale_height="118"
                    app:scale_left="54"
                    app:scale_textsize="44"
                    app:scale_top="0"
                    app:scale_width="800" />

                <ImageView
                    android:id="@+id/song_category_image_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:scale_height="494"
                    app:scale_left="26"
                    app:scale_top="118"
                    app:scale_width="1028" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_box"
                    app:scale_height="130"
                    app:scale_left="26"
                    app:scale_top="612"
                    app:scale_width="1028" />

                <com.littlefox.library.view.text.SeparateTextView
                    android:id="@+id/song_category_text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    app:scale_height="130"
                    app:scale_left="50"
                    app:scale_textsize="44"
                    app:scale_top="612"
                    app:scale_width="825" />

                <ImageView
                    android:id="@+id/button_song_category_main_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_origin_text_button"
                    app:scale_height="130"
                    app:scale_left="922"
                    app:scale_top="612"
                    app:scale_width="130" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="521"
                app:scale_base_width="1080" >

                <ImageView
                    android:id="@+id/song_category_image_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:scale_height="355"
                    app:scale_left="26"
                    app:scale_top="0"
                    app:scale_width="503" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_box"
                    app:scale_height="130"
                    app:scale_left="26"
                    app:scale_top="355"
                    app:scale_width="503" />

                <com.littlefox.library.view.text.SeparateTextView
                    android:id="@+id/song_category_text_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    app:scale_height="130"
                    app:scale_left="50"
                    app:scale_textsize="34"
                    app:scale_top="355"
                    app:scale_width="348" />

                <ImageView
                    android:id="@+id/button_song_category_sub1_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_origin_text_button"
                    app:scale_height="130"
                    app:scale_left="400"
                    app:scale_top="355"
                    app:scale_width="130" />

                <ImageView
                    android:id="@+id/song_category_image_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:scale_height="355"
                    app:scale_left="552"
                    app:scale_top="0"
                    app:scale_width="503" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_box"
                    app:scale_height="130"
                    app:scale_left="552"
                    app:scale_top="355"
                    app:scale_width="503" />

                <com.littlefox.library.view.text.SeparateTextView
                    android:id="@+id/song_category_text_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    app:scale_height="130"
                    app:scale_left="572"
                    app:scale_textsize="34"
                    app:scale_top="355"
                    app:scale_width="348" />

                <ImageView
                    android:id="@+id/button_song_category_sub2_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_origin_text_button"
                    app:scale_height="130"
                    app:scale_left="926"
                    app:scale_top="355"
                    app:scale_width="130" />
            </com.ssomai.android.scalablelayout.ScalableLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>