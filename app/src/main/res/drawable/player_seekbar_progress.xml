<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/color_949494"
                android:centerY="0.75"
                android:endColor="@color/color_949494"
                android:startColor="@color/color_949494"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="@color/color_ffffff"
                    android:startColor="@color/color_ffffff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_ffe84d"
                    android:centerY="0.75"
                    android:endColor="@color/color_ffe84d"
                    android:startColor="@color/color_ffe84d" />
            </shape>
        </clip>
    </item>

</layer-list>
